<UserControl x:Class="chatsharp_cs_project.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chatsharp_cs_project.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid>
        <PasswordBox             
            x:Name="PasswordBox"
            PasswordChanged="BindablePasswordBox_PasswordChanged"
            FontFamily="Helvetica"
            FontWeight="Light"
            Foreground="White"
            FontSize="30"
            BorderThickness="0"
            Background="Transparent"
            HorizontalAlignment="Left"
            Width="310"
            Opacity="0.6"
            Height="25"/>
    </Grid>
</UserControl>
